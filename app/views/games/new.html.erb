<div class="jumbotron">

  <h1> Add a New Board Game: </h1>

  <%= form_for :game, url: games_path do |f| %>

    <% if @game.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@game.errors.count, "error") %> prohibited
          this game from being saved:
        </h2>
        <ul>
          <% @game.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :average_play_time %><br>
      <%= f.text_area :avg_play_time %>
    </p>

    <p>
      <%= f.label :minimum_amount_of_players %><br>
      <%= f.text_area :min_players %>
    </p>

    <p>
      <%= f.label :maximum_amount_of_players %><br>
      <%= f.text_area :max_players %>
    </p>

    <p>
      <%= f.hidden_field :creator_id, :value => current_user.id %> <br>
    </p>

    <p>
      <%= f.submit "Submit New Game", :class => "btn btn-primary btn-lg" %>
    </p>
  <% end %>

  <%= link_to 'Back', games_path %>
</div>
