<div class="jumbotron">
<h1><%= @user.username.capitalize %></h1>
<h4>Email: <%= @user.email%></h4>
<p>Member since: <%= @user.created_at.strftime('%m/%d/%y') %></p>
<div id='user-collections'>
  <div class='collection'>
    <h3>Library</h4>
    <% @user.games.each do |game| %>
    <%= link_to game.name, game_path(game), class: 'btn btn-primary spaced-btn' %>
    <% end %>
  </div>

<% unless current_user == @user %>
        <%= link_to "Add Friend", friendships_path(:friend_id => @user), :method => :post %>
    <% end %>

    <h4>Friends</h4>
    <ul>
        <% @user.friends.each do |friend| %>
        <li>
          <%= friend.email %>
          <% if current_user == @user %>
            <%= link_to "Remove", friendship_path(:id => friend), :method => :delete %>
          <% end %>
        </li>
      <% end %>
    </ul>

    <% if current_user == @user %>
        <h4>Friend Requests</h4>
        <ul>
            <% @user.requested_friendships.each do |request| %>
            <li>
              <%= request.email %>
              <%= button_to "Accept", "/friendships/#{request.id}", :method => :put %>
              <%= button_to "Decline", "/friendships/#{request.id}", :method => :delete %>
            </li>
          <% end %>
        </ul>
    <% end %>



</div>
</div>
