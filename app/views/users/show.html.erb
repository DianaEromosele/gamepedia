<div class="jumbotron">
<h1><%= @user.username.capitalize %></h1>
<h4>Email: <%= @user.email%></h4>
<p>Member since: <%= @user.created_at.strftime('%m/%d/%y') %></p>
<div id='user-collections'>
  <div class='collection'>
    <h3>Library</h4>
    <% @user.games.each do |game| %>
    <%= link_to game.name, game_path(game), class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class='collection'>
    <h3>Friends</h4>
    <% @user.all_friends.each do |friend| %>
    <%= link_to friend.username, user_path(friend), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
</div>
